<div id="<%= dom_id trip %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= trip.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= trip.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Price:</strong>
    <%= trip.price %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Date start:</strong>
    <%= trip.date_start %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Date end:</strong>
    <%= trip.date_end %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Image main:</strong>
    <% if trip.image_main.attached? %>
    <%=image_tag trip.image_main, style: "width: 200px; height: 200px; object-fit: contain"%>
    <%end%>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this trip", trip, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this trip', edit_trip_path(trip), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
